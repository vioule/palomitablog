{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "browsers": "defaults"
        }
      }
    ],
    "@babel/preset-react"
  ],
  "plugins": [
    "react-hot-loader/babel",
    "babel-plugin-styled-components"
  ],
  "env": {
    "test": {
      "plugins": [
        ["babel-plugin-styled-components", { "ssr": false, "displayName": false }]
      ]
    }
  }
}